{
  "verbose": true,
  "roots": ["<rootDir>/src"],
  "collectCoverageFrom": [
    "src/**/*.{js,ts,tsx}",
    "!src/**/*.d.ts",
    "!**/*.stories.{js,ts,tsx}",
    "!src/main.tsx"
  ],
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.{js,ts,tsx}",
    "<rootDir>/src/**/*.{spec,test}.{js,ts,tsx}"
  ],
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "^@root(.*)$": "<rootDir>/src$1",
    "^@/(.*)": "<rootDir>/src/$1",
    "^((?!vars\\.less).)*\\.less": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.jsx?$": "babel-jest",
    "^.+\\.tsx?$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "[/\\\\]node_modules[/\\\\].+\\.(js|mjs|cjs|ts|tsx)$"
  ],
  "moduleFileExtensions": ["js", "ts", "tsx", "jsx"],
  "setupFilesAfterEnv": ["<rootDir>/setup-jest.js"],
  "resetMocks": true,
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 90,
      "functions": 90,
      "lines": 90
    }
  }
}
